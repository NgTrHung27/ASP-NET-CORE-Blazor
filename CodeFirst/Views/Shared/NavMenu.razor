                <i class="icofont-oscommerce fs-6 me-3"></i> Combos
            </NavLink>
        </div>
    
    }
</nav>

@code {
    private bool IsInRole(string role)
    {
        var authState = AuthStateProvider.GetAuthenticationStateAsync().Result;
        var user = authState.User;
        return user.IsInRole(role);
    }
}