                <i class="fa-solid fa-chart-simple fs-6 me-3"></i> Report
            </NavLink>
        </div>
    }
    @if (IsInRole("admin") || IsInRole("administrator system") || IsInRole("employee"))
    {
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="invoice">
                <i class="fa-solid fa-file-invoice-dollar fs-6 me-3"></i> Bills
            </NavLink>
